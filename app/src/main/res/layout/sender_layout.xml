<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/receiver_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/sender_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="371dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/sender_image"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/receiver_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="695dp"
        android:layout_toLeftOf="@+id/sender_image"
        android:background="@drawable/send_box"
        android:padding="8dp"
        android:text="sender's message"
        android:textColor="#000000" />


</RelativeLayout>